@{ ViewData["Title"] = "Home Page"; }


@foreach (var p in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="card h-100 shadow-sm">
            <h3 class="card-header">@p.Name</h3>
            <div class="card-body">
                <h5 class="card-title">Price: @p.Price.ToString("N0") $</h5>
                <h5 class="card-title">Category: @p.Name</h5>
            </div>
            <div style="height: 200px; overflow: hidden;">
                @if (!String.IsNullOrEmpty(p.ImageUrl))
                {
                    <img src="/@p.ImageUrl" class="img-fluid img-fluid" style="object-fit: cover; width: 100%; height: 100%;" alt="@p.Name" />
                }
                else
                {
                    <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="100%" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                        <rect width="100%" height="100%" fill="#868e96"></rect>
                        <text x="100%" y="100%" fill="#dee2e6" dy=".3em">Hình ảnh</text>
                    </svg>
                }
            </div>
            <div class="card-body">
                <a href="#" class="card-link btn btn-outline-primary btn-sm">Detail</a>
                <a href="#" class="card-link btn btn-outline-secondary btn-sm">Add to cart</a>
            </div>
        </div>
    </div>
}